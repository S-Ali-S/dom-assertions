{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "types": ["vitest/globals"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["packages/*"],
  "exclude": ["node_modules"]
}
